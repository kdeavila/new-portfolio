---
import React from "@icons/React.astro";
import TitleSection from "./TitleSection.astro";
import Send from "@icons/Send.astro";
---

<section id="contact" class="px-10 pb-14 lg:px-5 overflow-hidden">
    <div class="w-full max-w-5xl mx-auto">
        <TitleSection title="ContÃ¡cto" />

        <div data-aos="fade-up" class="grid grid-cols-1 gap-11">
            <div class="grid grid-cols-1 gap-14 md:grid-cols-2">
                <form action="/" autocomplete="off" class="w-full order-2">
                    <div class="grid grid-cols-1 gap-6 mb-6">
                        <input
                            class="w-full bg-card/60 px-4 py-3 outline-none text-neutral-400 rounded-2xl border transition-colors border-solid focus:border-blue-500 valid:border-[#2c3b4f] border-card shadow-back shadow-dark"
                            name="text"
                            placeholder="John Doe"
                            type="text"
                            required
                        />

                        <input
                            class="w-full bg-card/60 px-4 py-3 outline-none text-neutral-400 rounded-2xl border transition-colors border-solid focus:border-blue-500 border-card valid:border-[#2c3b4f] shadow-back shadow-dark"
                            name="email"
                            placeholder="Example@mail.com"
                            type="email"
                            required
                        />

                        <textarea
                            class="w-full bg-card/60 px-4 py-3 outline-none text-neutral-400 rounded-2xl border transition-colors border-solid focus:border-blue-500 border-card resize-none valid:border-[#2c3b4f] shadow-back shadow-dark"
                            rows="4"
                            name="message"
                            placeholder="Estoy esperando por tu mensaje"
                            required></textarea>
                    </div>
                    <button
                        class="inline-flex w-max bg-blue-600 border-blue-600 hover:bg-blue-500 text-base gap-2 py-2 px-4 font-medium items-center border rounded-2xl transition-colors"
                        type="submit"
                    >
                        Enviar mensaje
                        <Send />
                    </button>
                </form>

                <div
                    class="w-full react flex items-center justify-center order-2"
                >
                    <React />
                </div>
            </div>
        </div>
    </div>
</section>
