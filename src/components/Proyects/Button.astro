---
const { type, href, icon: Icon, text } = Astro.props;
let styles = "";

if (type === "demo") {
    styles = "bg-blue-600 border-blue-600 hover:bg-blue-500";
} else if (type === "github") {
    styles = "bg-card/5 border-blue-200 hover:bg-card/40";
} else {
    styles = "bg-[#0f1215] border-[#0f1215] hover:bg-[#0a0c0e]";
}
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class=`inline-flex text-base font-medium items-center border gap-2 px-4 py-2 rounded-2xl transition-colors ${styles}`
>
{text}
<Icon size="18" />
</a>
